        <div class="row">

            <div class="col-sm-4">
                <div class="thumbnail-style heading">
                    <h2>Spring 2017</h2><br />
                    <img alt="" src="@Url.Content("~/img/spring.jpg")" class="img-responsive">
                    <small>(early bird discount before the 6th December)</small>
                    <ul class="list-unstyled">
                        <li>
