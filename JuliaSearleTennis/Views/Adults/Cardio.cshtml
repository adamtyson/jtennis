
@{
    ViewBag.Title = "Cardio";
    Layout = "~/Views/_LayoutPage.cshtml";
}
<link href="@Url.Content("~/CSS/BookingButtons.css")" rel="stylesheet" />

<div class="container content">
    <div class="row">
        <div class="margin-bottom-10"></div>
        <p>
            <h2>Cardio Sessions Autumn 2016</h2>
        </p>
        <p>
        </p><br>

        <blockquote class="margin-bottom-30">
            
            
            Cardio sessions will run over the Summer on the following dates 19th July, 26th July, 9th August and 16th August
            <br />
            In September Cardio runs every week from the 13th September - 13th December, excluding the 25th October

            <br />
            <small><em>You do not need to book, just turn up at 8pm. For more details contact <a href="mailto:scott@smdcoaching.com">scott@smdcoaching.com</a></em></small>
        </blockquote>
      
    </div>
    <div class="row team margin-bottom-20">
       
        <div class="col-sm-4">
            <div class="thumbnail-style">
                <img alt="" src="@Url.Content("~/img/cardio-tennis-resized.jpg")" class="img-responsive">
            </div>
        </div>
        <div class="col-sm-4">
            <div class="thumbnail-style">
                <img alt="" src="@Url.Content("~/img/cardio3resized.jpg")" class="img-responsive">
            </div>
        </div>
        <div class="col-sm-4">
            <div class="thumbnail-style">
                <img alt="" src="@Url.Content("~/img/cardio2.jpg")" class="img-responsive">
            </div>
        </div>
    </div>
    <div class="row margin-bottom-40">
        <div class="col-md-6 md-margin-bottom-40">
            <h2>Cardio Tennis</h2>
            <p>Cardio Tennis is a fun group activity featuring drills to give players of all abilities a high energy cardio workout.</p>
            <ul class="list-unstyled">

                <li>
                    <i class="fa fa-check color-green"></i>	Fitness work out
                </li>
                <li>
                    <i class="fa fa-check color-green"></i>	Fun
                </li>
                <li>
                    <i class="fa fa-check color-green"></i>	Social
                </li>

            </ul>
            <p>Cardio Tennis runs on Tuesdays from <b>8pm - 9pm</b> at Wigmore tennis club.
          
            
            You do not need to book in advance, just turn up and play or use the form below for a discounted rate. <br />
            </p>
            <ul class="list-unstyled">Pricing:
                <li>
                    <i class="fa fa-check color-green"></i>Members: £8 per session, or £40 for 6 (can be used any time)
                </li>
                <li>
                    <i class="fa fa-check color-green"></i>Non members: £12 per session, or £60 for 6 (can be used any time)
                </li>
                <li>
                    <i class="fa fa-check color-green"></i>Please note there is a £1 surcharge for sessions not paid in advance
                </li>
            </ul>
            <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
                <input type="hidden" name="cmd" value="_s-xclick">
                <input type="hidden" name="hosted_button_id" value="ZX5EHLXDGDK68">
                <table>
                    <tr><td><input type="hidden" name="on0" value="Book Cardio Tennis">Book Cardio Tennis</td></tr>
                    <tr>
                        <td>
                            <select name="os0">
                                <option value="six sessions - Wigmore member">six sessions - Wigmore member £40.00 GBP</option>
                                <option value="six sessions - non member">six sessions - non member £60.00 GBP</option>
                                <option value="one session - Wigmore member">one session - Wigmore member £8.00 GBP</option>
                                <option value="one session - non member">one session - non member £12.00 GBP</option>
                            </select>
                        </td>
                    </tr>
                    <tr><td><input type="hidden" name="on1" value="Participant's Name:">Participant's Name:</td></tr>
                    <tr><td><input type="text" name="os1" maxlength="200"></td></tr>
                </table>
                <input type="hidden" name="currency_code" value="GBP">
                <input type="image" src="https://www.paypalobjects.com/en_GB/i/btn/btn_cart_LG.gif" border="0" name="submit" alt="PayPal – The safer, easier way to pay online.">
                <img alt="" border="0" src="https://www.paypalobjects.com/en_GB/i/scr/pixel.gif" width="1" height="1">
            </form>

            <!-- Blockquotes -->
            
        </div>

        <div class="col-md-6 md-margin-bottom-40">
            <div class="responsive-video">
                <iframe width="854" height="510" src="https://www.youtube.com/embed/A_Tgu3XekHI" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="thumbnail-style">
                <img alt="" src="@Url.Content("~/img/cardio-tennis-logo.jpg")" class="img-responsive">
            </div>
        </div>
    </div><!--/row-->
   
</div>


